					-- local imgCachePath="CACHE:\\com_wondertek_mobileaudio\\image\\604d0103ecaf44f51066f8bb9320701e.png"
					Log:write('imgCachePath=======1',imgCachePath)
					Log:write('imgCachePath=======2',IO:fileExist(imgCachePath))
                    if IO:fileExist(imgCachePath) then
                       local removeio=IO:fileRemove(imgCachePath)
					   Log:write('imgCachePath=======3',removeio)
                    end
