	            local userImgCig = Config:get("userImg")
	            Log:write('imgpath========3',userImgCig)
               if imgBg ~= "" then
                  Sprite:setProperty(spaceBg,"src",imgBg)
               end
		       if userImgCig ~= "" then
                  Sprite:setProperty(msgImg,"src",userImgCig)
