--@brief mode 0- 循环 1-顺序 2-随机
function getNextPlayParam(mode)
   if subListTable then
        local count = #subListTable
        -- local curPlayName = Sprite:getProperty(audioname,'text')
        -- Log:write('curPlayName=',curPlayName)  curPlayContentId
        local iFound = -1       
        if subListTable and subListTable~='' and curPlayContentId ~='' then        
            for i=0,count  do 
			local _,_,contentId = string.find(subListTable[i].param, 'contentId=(%d+);')
                -- if subListTable[i].name == curPlayName then
				Log:write('curPlayContentId======2',contentId,curPlayContentId)
				if contentId == curPlayContentId then
				Log:write('curPlayContentId======3',contentId,curPlayContentId)
                    if mode == 0 then
                        if (i+1 > count) then iFound = 0
                        else iFound = i+1 end
                        break
                    elseif mode == 1 then
                        if (i+1 > count) then iFound = -1
                        else iFound = i+1 end
                        break
                    elseif mode == 2 then
                        math.randomseed(os.time())
                        math.random()
                        iFound = math.random(0,count)
                        break
                    end                
                end
            end
        end
        Log:write('iFound=,mode=',iFound,mode)
        return iFound
    end     
end

